{% extends 'base.html.twig' %}

{% block title %}Bill{% endblock %}

{% block body %}
    <h1>Bill</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ bill.id }}</td>
            </tr>
            <tr>
                 <th>Name of Customer</th>
                <td>{{ bill.customer.Name}}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{{ bill.Date ? bill.Date|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>TableNumber</th>
                <td>{{ bill.TableNumber }}</td>
            </tr>
            <tr>
                <th>Total</th>
                <td>{{ bill.Total }}</td>
            </tr>
            
        </tbody>
    </table>

    <h3><a href="{{ path('bill_index') }}">back to list</a></h3>

    <h3><a href="{{ path('bill_edit', {'id': bill.id}) }}">edit</a></h3>

    <h3>{{ include('bill/_delete_form.html.twig') }}</h3>
{% endblock %}

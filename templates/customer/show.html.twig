{% extends 'base.html.twig' %}

{% block title %}Customer{% endblock %}

{% block body %}
    <h1>Customer</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ customer.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ customer.Name }}</td>
            </tr>
            <tr>
                <th>BirthDate</th>
                <td>{{ customer.BirthDate ? customer.BirthDate|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Phone</th>
                <td>{{ customer.Phone }}</td>
            </tr>
             </tbody>
        </table>
        <h3><a href="{{ path('customer_edit', {'id': customer.id}) }}">Edit</a></h3>

        <h3><a href="{{ path('customer_index') }}">Back to list</a></h3>

        <h3>{{ include('customer/delete_form.html.twig') }}</h3>
{% endblock %}
